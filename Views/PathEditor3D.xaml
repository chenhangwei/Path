<UserControl x:Class="Path.Views.PathEditor3D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helix="http://helix-toolkit.org/wpf"
             Height="Auto" Width="Auto">
    <Grid>
        <helix:HelixViewport3D x:Name="HelixView" Background="#FFF8F8F8">
            <helix:DefaultLights />
            <ModelVisual3D x:Name="SceneRoot" />
        </helix:HelixViewport3D>

        <!-- Gizmo mode overlay (top-right) -->
        <Border x:Name="GizmoModeBorder" Background="#CCFFFFFF" CornerRadius="4" Padding="6" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Visibility="Collapsed">
            <TextBlock x:Name="TbGizmoMode" Text="" Foreground="Black" FontWeight="Bold" FontSize="12" />
        </Border>

    </Grid>
</UserControl>